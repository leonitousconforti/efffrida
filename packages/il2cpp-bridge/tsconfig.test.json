{
    "$schema": "http://json.schemastore.org/tsconfig",
    "extends": "../../tsconfig.base.jsonc",
    "references": [
        { "path": "tsconfig.src.json" },
        { "path": "../polyfills/tsconfig.src.json" },
        { "path": "../vitest-pool/tsconfig.src-node.json" },
        { "path": "../vitest-pool/tsconfig.src-frida.json" }
    ],
    "include": ["test"],
    "compilerOptions": {
        "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
        "outDir": ".tsbuildinfo/test",
        "noEmit": true,
        "erasableSyntaxOnly": false,
        "baseUrl": ".",
        "types": ["frida-gum"],
        "paths": {
            "@efffrida/il2cpp-bridge": ["./src/index.ts"],
            "@efffrida/il2cpp-bridge/*": ["./src/*/index.ts", "./src/*.ts"]
        },
        "plugins": [
            {
                "name": "@effect/language-service",
                "namespaceImportPackages": []
            }
        ]
    }
}
